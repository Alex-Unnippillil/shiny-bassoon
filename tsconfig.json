{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "WebWorker"],
    "types": ["vite/client", "jest", "node"],
    "allowJs": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vite.config.ts",
    "playwright.config.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules", "src/store"]
}
